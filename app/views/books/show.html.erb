<div class="main">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <p><b>Title:</b> <%= @book.title %></p>
  <p><b>Body:</b> <%= @book.body %></p>

  <ul class="link">
    <li><%= link_to "Edit", edit_book_path(@book.id) %></li>
    <li>|</li>
    <li><%= link_to "Back", books_path %></li>
  </ul>
</div>