<div class="main">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <!-- 投稿一覧 -->
  <h1>Books</h1>
  <section class="contents">
    <table>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </table>
  </section>
  <!-- 新規投稿 -->
  <section class="new-post">
    <h2>New book</h2>
    <%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
        <p class="form-error"><%= @book.errors.count %> errors prohibited this book from being saved:</p>
        <% @book.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
    <% end %>
      <div class="field">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :body, "Body" %>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit "Create Book" %>
      </div>
    <% end %>
  </section>
</div>