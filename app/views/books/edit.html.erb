<div class="main">
  <h1>Editing Book</h1>
  <%= form_for(@book) do |f| %>
    <% @book.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body, "Body" %>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit "Update Book" %>
    </div>
  <% end %>
  <ul class="link">
    <li><%= link_to "Show", book_path(@book) %></li>
    <li>|</li>
    <li><%= link_to "Back", books_path %></li>
  </ul>
</div>